# BLNT-CLI Environment Configuration
# Copy this file to .env and configure your settings

# API Keys (if using external services)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Browser Configuration
BLNT_BROWSER_HEADLESS=false
BLNT_BROWSER_SLOW_MO=100

# Agent Configuration
BLNT_AGENT_VERBOSE=false
BLNT_AGENT_MAX_CONCURRENT_TASKS=3

# Desktop Configuration
BLNT_DESKTOP_VERBOSE=false

# Logging
BLNT_LOG_LEVEL=info

# Custom Paths (optional)
# BLNT_CONFIG_PATH=~/.blnt/config.json
# BLNT_SCREENSHOT_PATH=./screenshots
